<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- add course form-->

    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <form string="Course form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="duration"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--add course list tree-->

    <record id="view_course_list" model="ir.ui.view">
        <field name="name">course.list</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <list string="Course List">
                <field name="name"/>
                <field name="duration"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- action to open course form and tree views-->
    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- menu item to access course views-->
    <menuitem id="menu_course_root" name="Courses" sequence="10"/>
    <menuitem id="menu_course_management" name="Course Management" parent="menu_course_root" action="action_course"/>

</odoo>