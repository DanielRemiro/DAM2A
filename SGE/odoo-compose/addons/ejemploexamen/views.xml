<odoo>      
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">alumno.form</field>
        <field name="model">mimodulo.alumno</field>
        <field name="arch" type="xml">
            <form string="Alumno Form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_alumno_list" model="ir.ui.view">
        <field name="name">alumno.list</field>
        <field name="model">mimodulo.alumno</field>
        <field name="arch" type="xml">
            <list string="Alumno List">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">mimodulo.alumno</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mimodulo_root" name="Mi Modulo"/>

    <menuitem id="menu_mimodulo_alumno" name="Alumnos" parent="menu_mimodulo_root" action="action_alumno"/>

</odoo>