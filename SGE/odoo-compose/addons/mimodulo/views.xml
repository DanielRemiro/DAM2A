        <field name="name">Examenes</field>
        <field name="res_model">mimodulo.examen</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--Menus-->
    <menuitem id="menu_mimodulo_root" name="Mi Modulo"/>
    <!--Menu alumno-->
    <menuitem id="menu_mimodulo_alumno" name="Alumnos" parent="menu_mimodulo_root" action="action_alumno"/>
    <!--Menu curso-->
    <menuitem id="menu_mimodulo_curso" name="Cursos" parent="menu_mimodulo_root" action="action_curso"/>
    <!--Menu profesor-->
    <menuitem id="menu_mimodulo_profesor" name="Profesores" parent="menu_mimodulo_root" action="action_profesor"/>
    <!--Menu departamento-->
    <menuitem id="menu_mimodulo_departamento" name="Departamentos" parent="menu_mimodulo_root" action="action_departamento"/>
