<odoo>

    <!--Formularios-->

    <!--Formulario alumno-->
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">alumno.form</field>
        <field name="model">mimodulo.alumno</field>
        <field name="arch" type="xml">
            <form string="Alumno Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="edad"/>
                        <field name="email"/>
                        <field name="dni"/>
                        <field name="curso_id"/>
                        <field name="examen_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Formulario curso-->

    <record id="view_curso_form" model="ir.ui.view">
        <field name="name">curso.form</field>
        <field name="model">mimodulo.curso</field>
        <field name="arch" type="xml">
            <form string="Curso Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="duracion"/>
                        <field name="alumno_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Formulario profesor-->

    <record id="view_profesor_form" model="ir.ui.view">
        <field name="name">profesor.form</field>
        <field name="model">mimodulo.profesor</field>
        <field name="arch" type="xml">
            <form string="Profesor Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="especialidad"/>
                        <field name="email"/>
                        <field name="sexo"/>
                        <field name="departamento_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Formulario departamento-->

    <record id="view_departamento_form" model="ir.ui.view">
        <field name="name">departamento.form</field>
        <field name="model">mimodulo.departamento</field>
        <field name="arch" type="xml">
            <form string="Departamento Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ubicacion"/>
                        <field name="profesor_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Formulario examen-->
    <record id="view_examen_form" model="ir.ui.view">
        <field name="name">examen.form</field>
        <field name="model">mimodulo.examen</field>
        <field name="arch" type="xml">
            <form string="Examen Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fecha"/>
                        <field name="alumno_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Listas-->

    <!--Lista alumno-->
    <record id="view_alumno_list" model="ir.ui.view">
        <field name="name">alumno.list</field>
        <field name="model">mimodulo.alumno</field>
        <field name="arch" type="xml">
            <list string="Alumno List">
                <field name="name"/>
                <field name="edad"/>
                <field name="email"/>
                <field name="dni"/>
                <field name="curso_id"/>
                <field name="examen_ids"/>
            </list>
        </field>
    </record>

    <!--Lista curso-->
    <record id="view_curso_list" model="ir.ui.view">
        <field name="name">curso.list</field>
        <field name="model">mimodulo.curso</field>
        <field name="arch" type="xml">  
            <list string="Curso List">
                <field name="name"/>
                <field name="descripcion"/>
                <field name="duracion"/>
                <field name="alumno_id"/>
